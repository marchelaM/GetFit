<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_workout_program"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hackbulgaria.getfit.workout.muscleGain.WorkoutProgram">

    <Button
        android:id="@+id/weightLoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:background="#4CA"
        android:fontFamily="casual"
        android:padding="15dp"
        android:text="WEIGHT LOSS"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/muscleGain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/endurance"
        android:layout_alignLeft="@+id/weightLoss"
        android:layout_alignRight="@+id/endurance"
        android:layout_alignStart="@+id/weightLoss"
        android:layout_centerVertical="true"
        android:background="#4CA"
        android:fontFamily="casual"
        android:padding="15dp"
        android:text="MUSCLE GAIN"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="24dp"
        android:fontFamily="casual"
        android:text="WHAT IS YOUR GOAL"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/holo_green_dark"
        tools:gravity="center_horizontal" />

    <Button
        android:id="@+id/endurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/weightLoss"
        android:layout_alignLeft="@+id/weightLoss"
        android:layout_alignRight="@+id/weightLoss"
        android:layout_alignStart="@+id/weightLoss"
        android:layout_alignTop="@+id/muscleGain"
        android:layout_marginTop="101dp"
        android:background="#4CA"
        android:fontFamily="casual"
        android:padding="15dp"
        android:text="ENDURANCE"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />
    @+id/tipsButton"
    android:layout_alignStart="@+id/tipsButton"
    android:layout_alignRight="@+id/tipsButton"
    android:layout_alignEnd="@+id/tipsButton"
    tools:gravity="fill_vertical|center_horizontal"
    android:textColor="@android:color/holo_red_dark" />@+id/tipsButton"
    android:layout_alignEnd="@+id/tipsButton"
    android:layout_alignLeft="@+id/tipsButton"
    android:layout_alignStart="@+id/tipsButton"
    android:capitalize="sentences" />

</RelativeLayout>
