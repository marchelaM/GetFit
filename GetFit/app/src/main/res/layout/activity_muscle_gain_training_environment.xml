<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_muscle_gain_training_environment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackbulgaria.getfit.workout.muscleGain.MuscleGainTrainingEnvironment">


    <Button
        android:id="@+id/outside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="#4CA"
        android:fontFamily="casual"
        android:padding="15dp"
        android:text="OUTSIDE"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:fontFamily="casual"
        android:text="WHERE DO YOU WANT TO WORKOUT"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="23sp"
        tools:gravity="center_horizontal" />

    <Button
        android:id="@+id/gym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/home"
        android:layout_alignLeft="@+id/home"
        android:layout_alignRight="@+id/home"
        android:layout_alignStart="@+id/home"
        android:layout_below="@+id/textView"
        android:layout_marginTop="28dp"
        android:background="#4CA"
        android:fontFamily="casual"
        android:padding="15dp"
        android:text="gym"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/outside"
        android:layout_alignLeft="@+id/outside"
        android:layout_alignRight="@+id/outside"
        android:layout_alignStart="@+id/outside"
        android:layout_centerVertical="true"
        android:background="#4CA"
        android:fontFamily="casual"
        android:padding="15dp"
        android:text="home"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>
